<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/fountain"
        android:clipChildren="false"
        android:id="@+id/linearLayout">
        <TextView
            android:paddingStart="30dp"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:gravity="bottom"
            android:text="You have "
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_point"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_toStartOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView1"
            android:gravity="bottom"
            android:text="0 "
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="16pt"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_toEndOf="@+id/text_point"
            android:gravity="bottom"
            android:text=" points"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="14pt"
            android:textStyle="bold" />



    </LinearLayout>

    <ImageView
        android:id="@+id/reward_image"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="desc"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <TextView
        android:id="@+id/reward_name"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/reward_image"
        android:layout_marginTop="21dp"
        android:text="Name of item"
        android:textAlignment="viewStart"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reward_image"
        android:layout_marginBottom="54dp"
        android:layout_toEndOf="@+id/reward_point"
        android:text=" Points"
        android:textAlignment="center"
        android:textSize="16dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"
        android:text="Redeem" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/reward_image"
        android:layout_below="@+id/reward_image"
        android:layout_marginTop="17dp"
        android:text="Description:"
        android:textStyle="bold"
        android:textSize="16dp"
        android:id="@+id/textView3" />

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/textView3"
        android:text="Item's description" />

    <TextView
        android:id="@+id/reward_point"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignStart="@+id/reward_name"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="16dp" />

</android.support.constraint.ConstraintLayout>